{
  "buildCommand": "pnpm prisma generate && pnpm run build:client",
  "outputDirectory": "dist/spa",
  "installCommand": "pnpm install",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
